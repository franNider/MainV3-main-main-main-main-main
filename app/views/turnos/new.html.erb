<%= form_with(model: @turno, local: true) do |form| %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h1>Formulario de Turno</h1>

        <% if @turno.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @turno.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group<%= @turno.errors[:motivo].any? ? ' has-error' : '' %>">
          <%= form.label :motivo %>
          <%= form.text_field :motivo, class: "form-control" %>
        </div>

        <div class="form-group<%= @turno.errors[:fecha].any? ? ' has-error' : '' %>">
          <%= form.label :fecha %>
          <%= form.date_select :fecha, start_year: 2023, end_year: 2030, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= form.submit "Enviar", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>